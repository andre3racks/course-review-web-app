extends login_layout

block content

  .container
    .row.h-100
      .col-md-6.col-sm-6.col-xs-12.mx-auto
        form.form-container(method='POST' action="/signup")
          h1.sign-in.text-center Sign Up
          .form-group
            label(for='inputEmail') Email address
            input#inputEmail.form-control(name='email' type='email' placeholder='Email address' required='' autofocus='')
          .form-group
            label(for='inputPassword') Password
            input#inputPassword.form-control(name='password' type='password' placeholder='Password' required='')
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up